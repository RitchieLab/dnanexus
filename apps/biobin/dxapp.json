{
  "name": "biobin",
  "title": "BioBin",
  "summary": "The rare variant binning tool BioBin",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "vcf_file",
      "label": "VCF File",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf","*.vcf.gz"],
      "help": "The genotyped variants in block-gzipped VCF format."
    },
    {
      "name": "role_file",
      "label": "Role File",
      "class": "file",
      "optional": true,
      "patterns": ["*.rol*"]
    },
    {
      "name": "phenotype_file",
      "label": "Phenotype File",
      "class": "file",
      "optional": true,
      "patterns": ["*.phe*"]
    },
    {
      "name": "covariate_file",
      "label": "Covariate File",
      "class": "file",
      "optional": true,
      "patterns": ["*.cov*"]
    },
    {
      "name": "weight_file",
      "label": "Weight File",
      "class": "file",
      "optional": true,
      "patterns": ["*.weight*","*.wgt*"]
    },
    {
      "name": "region_file",
      "label": "Custom Regions File",
      "class": "file",
      "optional": true,
      "patterns": ["*.region*","*.rgn*"]
    },
    {
      "name": "include_region_file",
      "label": "Region Names List",
      "class": "file",
      "optional": true,
      "patterns": ["*.gen*"]
    },
    {
      "name": "loki_db",
      "label": "LOKI Knowledge Database",
      "help": "A file, a LOKI knowledge database.",
      "class": "file",
      "optional": false,
      "patterns": ["LOKI*.db"],
      "suggestions": [
        {"name": "LOKI Database Versions", "project": "project-FGqF5B00ByvPXG4G87yQy23G", "path": "/LOKI"}
      ]
    },
    {
      "name": "regression_type",
      "label": "Regression Type",
      "class": "array:string",
      "choices": ["linear","logistic","wilcoxon","SKAT-linear","SKAT-logistic"],
      "optional": true
    },
    {
      "name": "output_prefix",
      "label": "Output File Prefix",
      "class": "string",
      "optional": false,
      "default": "biobin"
    },
    {
      "name": "biobin_args",
      "label": "BioBin Arguments",
      "class": "string",
      "optional": true,
      "default": "--weight-loci Y --bin-pathways N --bin-regions Y --bin-minimum-size 1",
      "help": "(Optional) Advanced arguments for Biobin."
    },
    {
      "name": "permu_count",
      "label": "Permutation Count",
      "class": "int",
      "optional": true,
      "default": 0,
      "help": "(Optional) An integer for permutation count. Use 0 to disable permutation."
    }
  ],
  "outputSpec": [
    {
      "name": "log_file",
      "label": "Log File",
      "class": "file",
      "optional": false,
      "patterns": ["*.log"],
      "help": "A file, with log information from the job."
    },
    {
      "name": "bins_files",
      "label": "Bins Files",
      "class": "array:file",
      "optional": false,
      "patterns": ["*bins.csv"],
      "help": "A list of files, in CSV format with bins report."
    },
    {
      "name": "summary_file",
      "label": "Bins Summary File",
      "class": "file",
      "optional": false,
      "patterns": ["*.tsv"],
      "help": "A file, in TSV format with summary information."
    },
    {
      "name": "locus_file",
      "label": "Locus File",
      "class": "file",
      "optional": false,
      "patterns": ["*.csv"],
      "help": "A file, in CSV format with locus information."
    },
    {
      "name": "unlifted_files",
      "label": "Unlifted Variants Files",
      "class": "array:file",
      "optional": true,
      "patterns": ["*.csv"],
      "help": "(Optional) A file, in CSV format with ulifted positions."
    },
    {
      "name": "permu_file",
      "label": "Permutation Summary File",
      "class": "file",
      "optional": true,
      "patterns": ["*.csv"],
      "help": "(Optional) A file, in CSV format with permutation summary."
    }
  ],
  "regionalOptions": {
    "aws:us-east-1": {"systemRequirements": {"main": {"instanceType": "mem1_ssd1_x16"}},
                      "assetDepends": [{"name": "marylyn_asset", "id": "record-FGpf7zQ0kfbZxj6q4ZzQ2BPG"},
                                       {"name": "boost_1_48_0_asset", "id": "record-FGzQz500fZ0pQgXJ2xqbk3xz"}]},
    "azure:westus": {"systemRequirements": {"main": {"instanceType": "azure:mem2_ssd1_x16"}},
                     "assetDepends": [{"name": "marylyn_asset", "id": "record-FGpfZ1j95qzXV43bP5y5JKgV"},
                                      {"name": "boost_1_48_0_asset", "id": "record-FGzQz500fZ0pQgXJ2xqbk3xz"}]}
  },
  "runSpec": {
    "interpreter": "bash",
    "file": "src/biobin.sh",
    "distribution": "Ubuntu",
    "release": "14.04",
    "timeoutPolicy": {
      "*": { "hours": 12 }
    }
  },
  "__access__": {
    "network": [ "*" ]
  }
}
