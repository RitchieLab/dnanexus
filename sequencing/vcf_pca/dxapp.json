{
  "name": "vcf_pca",
  "title": "Calculate PCs from VCF",
  "summary": "Uses PLINK 1.9 and eigenstrat 6.0 to calculate principal components from VCF or PLINK bed/bim/fam files",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "categories": [
    "Variation Calling",
    "Statistics"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.vcf.gz.tbi"
      ]
    },
    {
      "name": "bed_fn",
      "label": "BED File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.bed"
      ]
    },
    {
      "name": "bim_fn",
      "label": "BIM File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.bim"
      ]
    },
    {
      "name": "fam_fn",
      "label": "FAM File(s)",
      "class": "array:file",
      "optional": true,
      "patterns": [
        "*.fam"
      ]
    },
    {
      "name": "prefix",
      "label": "Prefix for files",
      "class": "string",
      "optional": true,
      "default": "VCF_PCA"
    },
    {
      "name": "maf",
      "label": "Minimum MAF",
      "class": "float",
      "optional": false,
      "default" : 0.05,
      "help": "MAF = minor allele frequency"
    },
    {
      "name": "sel_args",
      "label": "PLINK Marker selection arguments",
      "class": "string",
      "optional": true,
      "default": "--autosome --hwe 0.000001"
    },
    {
      "name": "ld_args",
      "label": "PLINK LD pruning arguments",
      "class": "string",
      "optional": true,
      "default": "--indep-pairwise 50 5 0.5"
    },
    {
      "name": "merge_args",
      "label" : "PLINK Merge arguments (sample drop goes here)",
      "class" : "string",
      "optional" : true,
      "default" : ""
    },
    {
      "name" : "project_1kg",
      "label" : "Project onto 1000 Genomes samples?",
      "class" : "boolean",
      "optional" : false,
      "default" : true
    },
    {
      "name" : "project_superpop",
      "label" : "Calculate projection using super-populations (EUR, etc.)?",
      "class" : "boolean",
      "optional" : true,
      "default" : false
    },
    {
      "name": "fast_pca",
      "label": "Use Fast Eigenvalue Approx? (Non fast may not work)",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name": "twstats",
      "label": "Calculate Tracy-Widom Stats?",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name": "num_evec",
      "label": "Number of Eigenvectors",
      "class": "int",
      "optional": false,
      "default" : 20
    },
    {
      "name": "ldregress",
      "label": "LD Regression Parameter",
      "class": "int",
      "optional": true,
      "default": 0
    },
    {
      "name": "numoutlier",
      "label": "Number of Outlier Removal Iterations",
      "class": "int",
      "optional": true,
      "default": 5
    },
    {
      "name": "pca_opts",
      "label": "Other Eigensoft Options (comma-separated)",
      "class": "string",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "evec_out",
      "label": "Eigenvectors",
      "class": "file"
    },
    {
      "name": "eval_out",
      "label": "Eigenvalues",
      "class": "file",
      "optional" : true
    },
    {
      "name": "twstats_out",
      "label": "TW Statistics",
      "class": "file",
      "help": "Tracy-Widom statistics to evaluate the statistical significance of each principal component identified by pca",
      "optional" : true
    },
    {
      "name": "samp_excl",
      "label": "Samples Excluded from Analysis",
      "class": "file",
      "optional" : true
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/vcf_pca.sh",
    "restartableEntryPoints": "all", 
    "distribution": "Ubuntu",
    "release": "14.04",
    "timeoutPolicy": {
      "*": { "hours": 120 }
    }
  },
  "regionalOptions": {
    "aws:us-east-1": {"systemRequirements": {"*": {"instanceType": "mem1_ssd1_x16"}},
                    "assetDepends": [{"id": "record-FGpf7zQ0kfbZxj6q4ZzQ2BPG"}],
                    "resources" : "project-FGqF5B00ByvPXG4G87yQy23G"},
    "azure:westus": {"systemRequirements": {"*": {"instanceType": "azure:mem2_ssd1_x16"}},
                    "assetDepends": [{"id": "record-FGpfZ1j95qzXV43bP5y5JKgV"}],
                    "resources" : "project-FGvp3009BJq40pkZ683v3754"}
  },
  "openSource" : true,
  "details": {
    "upstreamVersion": "PLINK 1.9 and eigenstrat 6.0",
    "whatsNew": ""
  }
}
