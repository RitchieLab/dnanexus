{
  "name": "vcf_qc",
  "title": "VCF QC",
  "summary": "Apply Recalibration and hard filters to VCF file",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.vcf.gz"]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.tbi", "*.vcf.gz.tbi"]
    },
    {
      "name": "gatk_jar",
      "label": "GATK jar file",
      "class": "file",
      "optional": false,
      "patterns": ["GenomeAnalysisTK*.jar"],
      "help": "The GenomeAnalysisTK.jar file."
    },
    {
      "name" : "target",
      "label" : "Exon Target",
      "class" : "file",
      "optional" : true,
      "patterns" : ["*.bed"]
    },
    {
      "name" : "max_sz",
      "label" : "Maximum File Size (in MB)",
      "optional" : true,
      "default" : 5000,
      "class" : "int"
    },
    {
      "name" : "padding",
      "label" : "Interval Padding",
      "optional" : true,
      "default" : 0,
      "class" : "int"
    },
    {
      "name": "SNP_tranches",
      "label": "SNP tranches file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tranches"
      ]
    },
    {
      "name": "SNP_recal",
      "label": "SNP recal file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.recal"
      ]
    },
    {
      "name": "INDEL_tranches",
      "label": "INDEL tranches file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tranches"
      ]
    },
    {
      "name": "INDEL_recal",
      "label": "INDEL recal file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.recal"
      ]
    },
    {
      "name": "SNP_ts",
      "label": "SNP Truth sensitivity",
      "class": "float",
      "optional": false,
      "default" : 99.5
    },
    {
      "name": "INDEL_ts",
      "label": "INDEL Truth sensitivity",
      "class": "float",
      "optional": false,
      "default" : 99.0
    },
    {
      "name": "addl_filter",
      "label": "Additional Hard Filters",
      "class": "string",
      "optional": true
    },
    {
      "group": "Build Options",
      "name": "build_version",
      "label": "NCBI Build Version",
      "class": "string",
      "choices": ["rgc_b38","gatk_b38","b37_decoy","hg38chr.fa"],
      "default": "rgc_b38",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Filtered VCF file",
      "class": "array:file",
      "patterns": ["*.vcf.gz"]
    },
    {
      "name": "vcfidx_out",
      "label": "Filtered VCF Index file",
      "class": "array:file",
      "patterns": ["*.tbi", "*.vcf.gz.tbi"]
    }
  ],
  "runSpec": {
    "distribution": "Ubuntu",
    "release": "14.04",
    "restartableEntryPoints": "all", 
    "interpreter": "bash",
    "file": "src/vcf_qc.sh",
    "timeoutPolicy": {"*": { "hours": 120 }}
  },
  "regionalOptions": {
    "aws:us-east-1": {"systemRequirements": {"*": {"instanceType": "mem1_ssd2_x8"}},
                    "assetDepends": [{"id": "record-FGpf7zQ0kfbZxj6q4ZzQ2BPG"}],
                    "resources" : "project-FGqF5B00ByvPXG4G87yQy23G"},
    "azure:westus": {"systemRequirements": {"*": {"instanceType": "azure:mem2_ssd1_x16"}},
                    "assetDepends": [{"id": "record-FGpfZ1j95qzXV43bP5y5JKgV"}],
                    "resources" : "project-FGvp3009BJq40pkZ683v3754"}
  },
  "openSource" : true,
  "details": {
    "upstreamUrl": "https://software.broadinstitute.org/gatk/",
    "whatsNew": ""
  }
}
