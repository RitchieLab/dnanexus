{
  "name": "vcf_qc",
  "title": "VCF QC",
  "summary": "Apply Recalibration and hard filters to VCF file",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "categories": [
    "Variation Calling"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tbi"
      ]
    },
    {
      "name" : "target",
      "label" : "Exon Target",
      "class" : "file",
      "optional" : true,
      "patterns" : ["*.bed"]
    },
    {
      "name" : "max_sz",
      "label" : "Maximum File Size (in MB)",
      "optional" : true,
      "default" : 5000,
      "class" : "int"
    },
    {
      "name" : "padding",
      "label" : "Interval Padding",
      "optional" : true,
      "default" : 0,
      "class" : "int"
    },
    {
      "name": "SNP_tranches",
      "label": "SNP tranches file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tranches"
      ]
    },
    {
      "name": "SNP_recal",
      "label": "SNP recal file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.recal"
      ]
    },
    {
      "name": "INDEL_tranches",
      "label": "INDEL tranches file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tranches"
      ]
    },
    {
      "name": "INDEL_recal",
      "label": "INDEL recal file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.recal"
      ]
    },
    {
      "name": "SNP_ts",
      "label": "SNP Truth sensitivity",
      "class": "float",
      "optional": false,
      "default" : 99.5
    },
    {
      "name": "INDEL_ts",
      "label": "INDEL Truth sensitivity",
      "class": "float",
      "optional": false,
      "default" : 99.0
    },
    {
      "name": "addl_filter",
      "label": "Additional Hard Filters",
      "class": "string",
      "optional": true
    },
    {
      "group": "Build Options",
      "name": "build_version",
      "label": "NCBI Build Version",
      "class": "string",
      "choices": ["rgc_b38","gatk_b38","b37_decoy","hg38chr.fa"],
      "default": "rgc_b38",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "vcf_out",
      "label": "Filtered VCF file",
      "class": "array:file",
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_out",
      "label": "Filtered VCF Index file",
      "class": "array:file",
      "patterns": [
        "*.tbi"
      ]
    }
  ],
  "runSpec": {
   "execDepends": [
      {
        "name": "pigz"
      },
      {
        "name": "tabix"
      }
    ],
    "distribution": "Ubuntu",
    "release": "14.04",
    "interpreter": "bash",
    "file": "src/vcf_qc.sh",
    "timeoutPolicy": {
      "*": { "hours": 120 }
    }
  },
  "regionalOptions": {
  "aws:us-east-1": {"systemRequirements": {"*": {"instanceType": "mem1_ssd2_x8"}},
                    "assetDepends": [{"id": ""}],
                    "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V"
                   }
  },
  "access": {
    "network": [
      "*"
    ],
     "allProjects": "VIEW"
  },
  "developers": ["user-tnperson", "user-auv13"],
  "openSource" : true,
  "authorizedUsers" : ["org-geisinger_affiliate", "org-geisinger", "org-support", "user-codushlaine", "user-semanti.mukherjee", "user-alexander.li", "user-shannon.bruse", "user-jan.freudenberg", "user-crisvh"],
  "details": {
    "upstreamVersion": "",
    "upstreamAuthor": "",
    "upstreamUrl": "",
    "upstreamLicenses": ["GPLv3"],
    "whatsNew": ""
  }
}
