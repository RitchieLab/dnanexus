{
  "name": "vcf_summary",
  "title": "VCF Summary Statistics",
  "summary": "Generate summary statistics for a VCF file (by sample and by variant)",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "categories": [
    "Statistics"
  ],
  "details": {
    "whatsNew": "* 1.0.0 Initial release\n",
    "citation": "",
    "license": "GPLv3"
  },
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF file",
      "help": "Variant file to summarize, in VCF format.",
      "class": "file",
      "optional": false,
      "patterns" : ["*.vcf", "*.vcf.gz"]
    },
    {
      "name" : "prefix",
      "label" : "Filename prefix",
      "help": "Output filename prefix. By default, the given VCF's filename will be reused minus the .vcf.gz extension.",
      "class" : "string",
      "optional" : true
    },
    {
      "name" : "sample",
      "label" : "Include Sample Summary Stats?",
      "help": "Option to create and return a table of per-sample summary statistics.",
      "class" : "boolean",
      "optional" : false,
      "default" : true
    },
    {
      "name" : "variant",
      "label" : "Include Variant Summary Stats?",
      "help": "Option to create and return a table of per-variant summary statistics. (unimplemented)",
      "class" : "boolean",
      "optional" : false,
      "default" : false
    }
  ],
  "outputSpec": [
    {
      "name": "sample_status",
      "label": "Sample statistics",
      "class": "file",
      "optional" : true
    },
    {
      "name": "variant_stats",
      "label": "Variant statistics",
      "class": "file",
      "optional" : true
    }
  ],
  "runSpec": {
    "assetDepends": [
      {"name": "pigz"},
      {"name": "tabix"},
      {"name": "vcftools"},
      {"name": "python-apsw"}
    ],
    "interpreter": "bash",
    "file": "src/vcf_summary.sh",
    "timeoutPolicy": {
      "*": { "hours": 8 }
    },
    "release": "14.04",
    "distribution": "Ubuntu"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": { "instanceType": "mem1_ssd1_x4" }
      }
    },
    "azure:westus": {
      "systemRequirements": {
        "*": { "instanceType": "azure:mem2_ssd1_x4" }
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  },
