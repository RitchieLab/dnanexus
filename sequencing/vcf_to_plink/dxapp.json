{
  "name": "vcf_to_plink",
  "title": "Convert VCF file to PLINK file",
  "summary": "vcf_to_plink",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "categories": [
    "Variation Calling",
    "Statistics"
  ],
  "inputSpec": [
    {
      "name": "vcf_fn",
      "label": "VCF File(s)",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ]
    },
    {
      "name": "vcfidx_fn",
      "label": "VCF Index File(s)",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz.tbi"
      ]
    },
    {
      "name": "snp_only",
      "label": "Output SNPs only",
      "class": "boolean",
      "optional": false,
      "default" : false
    },
    {
      "name": "biallelic",
      "label": "Output Biallelic Markers only",
      "class": "boolean",
      "optional": false,
      "default" : true
    },
    {
      "name" : "strict",
      "label" : "Output strict biallelic markers only",
      "class" : "boolean",
      "optional" : true,
      "default" : false
    },
    {
      "name": "sel_args",
      "label": "PLINK Marker selection arguments",
      "class": "string",
      "optional": true,
      "default": ""
    },
    {
      "name" : "prefix",
      "label" : "Prefix for files",
      "class" : "string",
      "optional" :true,
      "default" : ""
    }
  ],
  "outputSpec": [
    {
      "name": "bed_out",
      "label": "PLINK BED file",
      "class": "array:file",
      "patterns": [
        "*.bed"
      ]
    },
    {
      "name": "bim_out",
      "label": "PLINK BIM file",
      "class": "array:file",
      "patterns": [
        "*.bim"
      ]
    },
    {
      "name": "fam_out",
      "label": "PLINK FAM file",
      "class": "array:file",
      "patterns": [
        "*.fam"
      ]
    }
  ],
  "runSpec": {
    "execDepends": [
      {"name": "libgsl0ldbl"},
      {"name": "pigz"},
      {"name": "tabix"}
    ],
    "interpreter": "bash",
    "file": "src/vcf_to_plink.sh",
    "release": "14.04",
    "distribution": "Ubuntu",
    "timeoutPolicy": {
      "main": {
        "hours": 24
      }
    }
  },
  "resources" : "project-BYpFk1Q0pB0xzQY8ZxgJFv1V",
